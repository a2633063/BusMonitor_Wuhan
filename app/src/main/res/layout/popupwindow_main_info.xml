<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
android:background="@android:color/white"
    android:gravity="center"
    android:padding="0dp">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:addStatesFromChildren="false"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="关于"
                android:textSize="30dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_version"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="APP当前版本:"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/tv_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:text="作者:Zip_zhang"
                    android:textSize="15dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\n本app开源地址:"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_github1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="https://github.com/a2633063/BusMonitor_Wuhan"
                android:textSize="13dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="\n本APP通过抓取武汉智能公交的api获取武汉官方武汉公交的数据显示出来.本app仅为个人学习开发.\n支付宝打赏:(点击图片可直接跳转支付宝)"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/alipay"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/alipay" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="打赏与否不影响任何功能,仅表达对开发者的支持.感谢您的打赏!"
                android:textSize="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\n本APP仅为作者个人学习/使用,不为他人使用本APP造成的任何后果负责!"
                android:textSize="12dp" />

            <Button
                android:id="@+id/btn_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="app文档/源码" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>